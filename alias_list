alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias ip='ip -c'

alias ll='ls -alh'
alias lt='tree -C'
alias l='ls -lh'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias update='sudo apt update && sudo apt upgrade'
